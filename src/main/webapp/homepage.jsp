<!-- Scripts -->
<!-- Custom JS -->
<script>
    // JavaScript to handle login and register form visibility
    const loginForm = document.getElementById('login-form');
    const registerForm = document.getElementById('register-form');

    // Show login form
    document.querySelector('.login-register-buttons a[href="#login"]').addEventListener('click', function () {
        loginForm.classList.remove('blur');
        registerForm.classList.add('blur');
    });

    // Show register form
    document.querySelector('.login-register-buttons a[href="#register"]').addEventListener('click', function () {
        registerForm.classList.remove('blur');
        loginForm.classList.add('blur');
    });
</script>
